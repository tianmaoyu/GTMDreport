
<body id="mainLayout" class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'center',cache:false,href:'/Menu/Desktop'" style="overflow: hidden;">
    </div>
    @*'north'*@
    <div data-options="region:'south',href:''" style="height: 60px; overflow: hidden;" class="logo">
        <div style="float:right;background-color:#BD2828;  height:100%;">
            <img border="0" style="margin-right:0;max-height:100%" src="~/Images/ImagesBusiness/Logo.png" />
        </div>
        <div class="title"><img border="0" style="max-height:100%;margin-top:3px;margin-left:15px;" src="~/Content/ThemesEasyui/red/exImages/统计.png"></div>
        <div class="button menu-button">
            <a href="#" data-url="/Menu/Desktop" onclick="meunClick(this)">
                <img border="0" style="margin-top:-9px" class="button-image" src="~/Images/ImagesBusiness/_桌面.png"
                     icon="~/Images/ImagesBusiness/__桌面.png" iconhover="~/Images/ImagesBusiness/_桌面.png" />
                桌面
            </a>
        </div>
        <div class="button menu-button">
            <a href="#" data-url="/Menu/Chart" onclick="meunClick(this)">
                <img border="0" style="margin-top:-9px" class="button-image" src="~/Images/ImagesBusiness/__图表.png"
                     icon="~/Images/ImagesBusiness/__图表.png" iconhover="~/Images/ImagesBusiness/_图表.png" />
                图表
            </a>
        </div>
        <div class="button menu-button">
            <a href="#" data-url="/Menu/DataInput" onclick="meunClick(this)">
                <img border="0" style="margin-top:-9px" class="button-image" src="~/Images/ImagesBusiness/__上传.png"
                     icon="~/Images/ImagesBusiness/__上传.png"
                     iconhover="~/Images/ImagesBusiness/_上传.png" />
                数据录入
            </a>
        </div>
        <div class="quit">
            <ul>
                <li> <img border="0" style="margin-right:5px" src="/Images/ImagesBusiness/uesricon.png" /> </li>
                <li style="padding-right:10px;"><span style="color:#FFFFFF;">您好！用户名</span></li>
                <li> <a class="no-hover" href="/Authority/User/Logout"><img border="0" style="margin-right:5px" src="/Images/ImagesBusiness/withdraw.png" class="button-image" /></a> </li>
                <li style="padding-right:20px;"><a class="no-hover" href="/Account/Logout"><span style="color:#FFFFFF;">注销</span></a></li>
            </ul>
        </div>
    </div>

    <script>
        function meunClick(element) {
            //显示一个菜单
            debugger;
            var url = $(element).attr("data-url") + "?str=" + Math.random();
            $("#mainLayout").layout("panel", "center").panel('open').panel('refresh', url);
            //把所有的菜单设置为位选中
            var imgs = $(".menu-button img");
            for (var i = 0; i < imgs.length; i++) {
                $(imgs[i]).attr("src", $(imgs[i]).attr("icon"));
            }
            //设置一个选中的菜单
            var iconhover = $(element).find("img").attr("iconhover");
            $(element).find("img").attr("src", iconhover);


        }
    </script>
</body>