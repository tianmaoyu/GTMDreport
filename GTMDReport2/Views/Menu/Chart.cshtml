@{
    Layout = null;
}
<style>
    .panel-with-icon {
        padding-left: 3em;
    }
</style>
<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'west',title:'图标',iconCls:'icon-chart',split:true" style="width:180px;">
        <div class="easyui-accordion" data-options="fit:true,border:false">
            <div title="报表分析" data-options="iconCls:'icon-folder'">
                <div class="list-group">
                    <a class="list-group-item" url="/IndustryClassification/ViewChart" href="#">民营经济总量<span class="glyphicon glyphicon-stats pull-right"></span></a>
                    <a class="list-group-item" url="/IndustryClassification/ViewChartRed" href="#">工业增加值分行业<span class="glyphicon glyphicon-stats pull-right"></span></a>
                    <a class="list-group-item" url="/Student/Index" href="#">工业增加值分地区<span class="glyphicon glyphicon-stats pull-right"></span></a>
                    <a class="list-group-item" url="/StudentSign/Index" href="#">营经济固定资产<span class="glyphicon glyphicon-stats pull-right"></span></a>
                    <a class="list-group-item" url="/Student/Index" href="#">重点企业工业生产总值<span class="glyphicon glyphicon-stats pull-right"></span></a>
                </div>
            </div>

        </div>
    </div>

    <div data-options="region:'center'" style="padding:5px;background:#eee;">
        <div id="tabs-chart" class="easyui-tabs" data-options="fit:true,border:false" style="width:100%;height:99%;">
            <div title="首页" style="padding:20px;display:none;">

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".list-group .list-group-item").on("click", function () {
            var title = $(this).text()
            var id = $(this).attr("id");
            var href = $(this).attr("url")
            var tab = $("#tabs-chart").tabs('getTab', title);
            if (tab == undefined) {
                $("#tabs-chart").tabs('add', {
                    closable: true,
                    title: title,
                    href: href,
                })
            }
            else {
                $("#tabs-chart").tabs('select', title);
            }
        });
    });
</script>

